from Bio import SeqIO
inFile = open("suziT4.fasta",'r')
fw = open("domestication/Ch3.0rb4.fasta",'w')
s=0
for record in SeqIO.parse(inFile, 'fasta'):
 record.seq = record.seq[39427:41427]
 SeqIO.write(record, fw, "fasta")

